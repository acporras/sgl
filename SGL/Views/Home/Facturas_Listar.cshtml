@using SGL.Models;

<div class="container-fluid">
        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Facturas
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Código</th>
                                <th>Fecha</th>
                                <th>Unidad</th>
                                <th>Planta</th>
                                <th>SCOP</th>
                                <th>Galones</th>
                                <th>Octanaje</th>
                                <th>Monto</th>
                                <th>Opción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (factura fac in ViewBag.lista_facturas)
                                {
                            <tr>
                                <td>@fac.codFactura</td>
                                <td>@fac.fecha.ToString().Substring(0, 11)</td>
                                <td>@fac.unidad</td>
                                <td>@fac.planta</td>
                                <td>@fac.scop</td>
                                <td>@fac.galones</td>
                                <td>@fac.octanaje</td>
                                <td>@fac.monto</td>
                                @*<a href="@Url.Action("Eliminar_Factura","Home")?@fac.codFactura">Eliminar</a>*@
                                <td>@Html.ActionLink("Eliminar", "Eliminar_Factura", "Home", fac, new { @class = " " })</td>
                            </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
</div>