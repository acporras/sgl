@using SGL.Models;

<div class="container-fluid">
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-truck"></i>
            Listar Órdenes de Pedido
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Fecha</th>
                            <th>Unidad</th>
                            <th>Planta</th>
                            <th>SCOP</th>
                            <th>Estación</th>
                            <th>Galones</th>
                            <th>Octanaje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (OP oc in ViewBag.lista_OP)
                            {
                        <tr>
                            <td>@oc.codOP</td>
                            <td>@oc.fecha.ToString().Substring(0, 11)</td>
                            <td>@oc.unidad</td>
                            <td>@oc.planta</td>
                            <td>@oc.scop</td>
                            <td>@oc.estacion</td>
                            <td>@oc.galones</td>
                            <td>@oc.octanaje</td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Actualizado ayer a las 5:00 PM</div>
    </div>
</div>